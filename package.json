{
  "name": "brain-agriculture-monorepo",
  "version": "1.0.0",
  "description": "Monorepo para projeto Brain Agriculture",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/ui"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:ui": "npm run dev --workspace=apps/ui",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "api:dev": "npm run dev --workspace=apps/api",
    "api:migration:generate": "npm run migration:generate --workspace=apps/api",
    "api:migration:run": "npm run migration:run --workspace=apps/api",
    "api:migration:revert": "npm run migration:revert --workspace=apps/api"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}